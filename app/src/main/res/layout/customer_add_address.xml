<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    android:background="#c8ead7"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/frameLayout2"
                android:layout_width="match_parent"
                android:layout_height="92dp"
                android:background="#5CC360"
                android:elevation="10dp">

                <TextView
                    android:id="@+id/hamburger"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="6dp"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_menu_24" />

                <TextView
                    android:id="@+id/home"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="65dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="end"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_home_24" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="65dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/logo1"
                    android:layout_marginStart="35dp"
                    app:shapeAppearanceOverlay="@style/roundimageview"
                    tools:ignore="ImageContrastCheck" />

                <TextView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginTop="6dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_shopping_cart_24" />

                <TextView
                    android:id="@+id/profile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="45dp"
                    android:layout_marginTop="6dp"
                    android:layout_gravity="end"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_account_circle_24" />

                <TextView
                    android:id="@+id/back"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="50dp"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_arrow_back_24" />

                <EditText
                    android:id="@+id/search"
                    android:layout_width="match_parent"
                    android:layout_height="38dp"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="7dp"
                    android:layout_marginTop="48dp"
                    android:autofillHints="search"
                    android:background="@drawable/mysearch"
                    android:drawableStart="@drawable/ic_baseline_search_24"
                    android:hint="Search Product..."
                    android:inputType=""
                    android:minHeight="48dp"
                    android:padding="10dp"
                    android:textColor="@color/black"
                    android:textColorHint="#757575"
                    android:textSize="16sp"
                    tools:ignore="HardcodedText"
                    android:elevation="10dp"/>

            </FrameLayout>

            <TextView
                android:id="@+id/heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="Address"
                android:textColor="#39404a"
                android:textSize="19sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <ImageView
                android:id="@+id/one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:background="@drawable/mysearch"
                android:scaleType="fitCenter"
                android:src="@drawable/banner"
                tools:ignore="ImageContrastCheck" />

            <FrameLayout
                android:id="@+id/frameLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:text="Add Delivery Address"
                    android:gravity="start"
                    android:textColor="#39404a"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="serif"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="40dp"
                    android:background="#D1CDCD"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <RelativeLayout
                    android:id="@+id/frameLayout7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="55dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="30dp"
                    android:background="@drawable/shape_grey">

                    <CheckBox
                        android:id="@+id/chbox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="7dp"
                        android:layout_marginTop="12dp"
                        android:text="Default Address"
                        android:textSize="17sp"
                        tools:ignore="HardcodedText">

                    </CheckBox>

                    <EditText
                        android:id="@+id/select_address_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="60dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="name"
                        android:background="@drawable/edit_text_username"
                        android:hint="Select Address Type"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/house_no."
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="110dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="name"
                        android:background="@drawable/edit_text_username"
                        android:hint="House No."
                        android:inputType="number"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/landmark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="160dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="emailAddress"
                        android:background="@drawable/edit_text_username"
                        android:hint="Landmark"
                        android:inputType="textPostalAddress"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="210dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="password"
                        android:background="@drawable/edit_text_username"
                        android:hint="Address"
                        android:inputType="textPostalAddress"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/pincode"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="260dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="password"
                        android:background="@drawable/edit_text_username"
                        android:hint="Pincode"
                        android:inputType="textPostalAddress"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        tools:ignore="HardcodedText" />

                    <EditText
                        android:id="@+id/enter_your_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="310dp"
                        android:layout_marginEnd="10dp"
                        android:autofillHints="password"
                        android:background="@drawable/edit_text_username"
                        android:hint="Enter Your Phone"
                        android:inputType="phone"
                        android:minHeight="40dp"
                        android:padding="10dp"
                        android:textColor="@color/black"
                        android:textColorHint="#757575"
                        tools:ignore="HardcodedText" />

                    <Button
                        android:id="@+id/add_to_cart"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="15dp"
                        android:layout_marginTop="375dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/circles"
                        android:paddingLeft="40dp"
                        android:paddingTop="0dp"
                        android:paddingRight="40dp"
                        android:paddingBottom="0dp"
                        android:text="SAVE"
                        android:textColor="#FFFFFF"
                        android:textSize="17sp"
                        tools:ignore="HardcodedText" />

                </RelativeLayout>
            </FrameLayout>

            <FrameLayout
                android:id="@+id/frameLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp">

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="7dp"
                    android:text="Account"
                    android:gravity="start"
                    android:textColor="#39404a"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    app:fontFamily="serif"
                    tools:ignore="HardcodedText" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="43dp"
                    android:background="#D1CDCD"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/textView19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="60dp"
                    android:text="Basic profile"
                    android:gravity="start"
                    android:textColor="#39404a"
                    android:textSize="20sp"
                    app:fontFamily="sans-serif"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="56dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_arrow_circle_right_24"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="96dp"
                    android:background="#D1CDCD"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/textView20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="110dp"
                    android:text="Manage Address"
                    android:gravity="left"
                    android:textColor="#39404a"
                    android:textSize="20sp"
                    app:fontFamily="sans-serif"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="105dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_arrow_circle_right_24"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="144dp"
                    android:background="#D1CDCD"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/textView21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="158dp"
                    android:text="My Orders"
                    android:gravity="left"
                    android:textColor="#39404a"
                    android:textSize="20sp"
                    app:fontFamily="sans-serif"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="154dp"
                    android:layout_marginEnd="15dp"
                    android:textSize="25sp"
                    app:drawableStartCompat="@drawable/ic_baseline_arrow_circle_right_24"
                    tools:ignore="RtlHardcoded" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="194dp"
                    android:background="#D1CDCD"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"/>

                <TextView
                    android:id="@+id/textView22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="208dp"
                    android:text="Logout"
                    android:layout_marginBottom="20dp"
                    android:gravity="left"
                    android:textColor="#39404a"
                    android:textSize="20sp"
                    app:fontFamily="sans-serif"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/icon"
                    android:layout_width="49dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="74dp"
                    android:layout_marginTop="206dp"
                    android:textSize="25sp"
                    android:layout_marginBottom="20dp"
                    app:drawableStartCompat="@drawable/ic_baseline_keyboard_arrow_right_24" />

            </FrameLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
