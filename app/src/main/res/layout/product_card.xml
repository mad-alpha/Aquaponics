    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:weightSum="2">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/placeholder_image" />

        <LinearLayout
            android:id="@+id/product_desc_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <TextView
                android:id="@+id/product_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Product Name"
                android:textColor="#39404a"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText,NestedWeights" />
            <Button
                android:id="@+id/product_unit_available"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:layout_gravity="end"
                android:textColor="#FFFFFF"
                android:background="@drawable/in_stock"
                app:fontFamily="sans-serif"
                android:text="@string/in_stock" />
            <TextView
                android:id="@+id/product_price"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="₹ 45 per 250 GM"
                android:textColor="#5CC360"
                android:textSize="17sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />
            <Button
                android:id="@+id/add_to_cart"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:gravity="center"
                android:background="@drawable/circles"
                android:textColor="#FFFFFF"
                android:text="Add To Cart"
                tools:ignore="HardcodedText" />
        </LinearLayout>
        <TextView
            android:id="@+id/idTextView"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:visibility="invisible"/>
    </LinearLayout>

